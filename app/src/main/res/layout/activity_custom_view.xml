<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.returntolife.jjcode.mydemolist.demo.widget.customview.PieView
        android:id="@+id/pieView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.returntolife.jjcode.mydemolist.demo.widget.customview.RadarView
        android:id="@+id/radarView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.returntolife.jjcode.mydemolist.demo.widget.customview.ConfirmView
        android:id="@+id/confirmView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:bg_color="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="30dp"
        app:text="OKOKOKOKOKOKOK"
        app:text_size="15sp" />

    <com.returntolife.jjcode.mydemolist.demo.widget.customview.PasswordView
        android:id="@+id/passwordView"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:circle_color="@color/black"
        app:circle_radius="10dp"
        app:corners="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:line_color="@color/custom_attr_btn_text_color_night"
        app:pwd_count="6"
        app:stroke_width="2dp" />
</android.support.constraint.ConstraintLayout>